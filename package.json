{
  "name": "voice-tweet",
  "displayName": "Vice Tweet",
  "description": "sample description",
  "version": "0.0.1",
  "publisher": "VS-Modules",
  "repository": {
    "type": "git",
    "url": "https://github.com/2201009-kikukawa/Sample-extension"
  },
  "engines": {
    "vscode": "^1.93.1"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "views": {
      "voice-tweet": [
        {
          "type": "webview",
          "id": "voice-tweet",
          "name": "Voice Tweet",
          "icon": "./resources/webview_icon.svg"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "voice-tweet-explorer",
          "name": "つぶやきエディタ",
          "icon": "./resources/webview_icon.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "voice-tweet",
          "title": "Voice Tweet",
          "icon": "./resources/webview_icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:css && node ./esbuild.js",
    "build:css": "postcss src/webview/styles.css -o out/styles.css",
    "watch:css": "postcss src/webview/styles.css -o out/styles.css --watch",
    "watch:js": "node ./esbuild.js --watch",
    "package": "vsce package",
    "watch": "npm-run-all -p watch:*",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/glob": "^8.0.0",
    "@types/node": "16.x",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/vscode": "^1.93.1",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.16.10",
    "esbuild-plugin-copy": "^2.0.1",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^2.8.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
